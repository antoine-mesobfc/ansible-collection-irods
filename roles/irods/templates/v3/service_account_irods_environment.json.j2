{
  "irods_host": "{{ inventory_hostname }}",
  "irods_port": {{ irods_zone_port }},
  "irods_user_name": "{{ irods_zone_user }}",
  "irods_zone_name": "{{ irods_zone_name }}",
  "irods_home": "/{{ irods_zone_name }}/home/{{ irods_zone_user }}",
  "irods_cwd": "/{{ irods_zone_name }}/home/{{ irods_zone_user }}",
  "irods_default_resource": "{{ irods_default_resource_name }}",
  "irods_server_control_plane_key": "{{ irods_server_control_plane_key }}",
  "irods_server_control_plane_port": {{ irods_server_control_plane_port }},

  "irods_default_hash_scheme": "SHA256",
  "irods_default_number_of_transfer_threads": 4,
  "irods_encryption_algorithm": "AES-256-CBC",
  "irods_encryption_key_size": 32,
  "irods_encryption_num_hash_rounds": 16,
  "irods_encryption_salt_size": 8,
  "irods_match_hash_policy": "compatible",
  "irods_maximum_size_for_single_buffer_in_megabytes": 32,
  "irods_server_control_plane_encryption_algorithm": "AES-256-CBC",
  "irods_server_control_plane_encryption_num_hash_rounds": 16,
  "irods_transfer_buffer_size_for_parallel_transfer_in_megabytes": 4,

  {% if irods_cs_ssl %}
  "irods_client_server_negotiation": "request_server_negotiation",
  "irods_client_server_policy": "CS_NEG_REQUIRE",
  "irods_ssl_certificate_chain_file": "{{ irods_ssl_certificate_chain_file }}",
  "irods_ssl_certificate_key_file": "{{ irods_ssl_certificate_key_file }}",
  "irods_ssl_verify_server": "{{ irods_ssl_verify_server }}",
  "irods_ssl_ca_certificate_file": "{{ irods_ssl_ca_certificate_file }}",
  "irods_ssl_dh_params_file": "{{ irods_ssl_dh_params_file }}",
  {% else %}
  "irods_client_server_negotiation": "off",
  "irods_client_server_policy": "CS_NEG_DONT_CARE",
  {% endif %}

  "schema_name": "irods_environment",
  "schema_version": "{{ irods_config_schema_version }}"
}
